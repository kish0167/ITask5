@using ITask5.Helpers
@model PageViewModel

<div class="container-fluid mt-4">
    <table class="table table-hover" id="songsTable">
        <thead class="table-light">
            <tr>
                <th style="width: 40px;"></th>
                <th>#</th>
                <th>@Localazier["song_column_title"]</th>
                <th>@Localazier["artist_column_title"]</th>
                <th>@Localazier["album_column_title"]</th>
                <th>@Localazier["genre_column_title"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in Model.Songs)
            {
                <tr class="song-row" data-bs-toggle="collapse" 
                    data-bs-target="#details-@song.Id" 
                    aria-expanded="false" 
                    aria-controls="details-@song.Id"
                    style="cursor: pointer;"
                    id="@song.Id"
                    song-seed="@song.Seed"
                    song-duration="@song.DurationSeconds">
                    <td>
                        <i class="bi bi-chevron-down toggle-icon" id="icon-@song.Id"></i>
                    </td>
                    <td>@song.Id</td>
                    <td>@song.Title</td>
                    <td>@song.Artist</td>
                    <td>@song.Album</td>
                    <td><span class="badge bg-secondary">@song.Genre</span></td>
                </tr>
                
                <!-- Expandable Details Row -->
                <tr class="collapse-row">
                    <td colspan="6" class="p-0 border-0">
                        <div class="collapse" id="details-@song.Id">
                            <div class="details-container p-4 bg-light border-start border-4 border-primary">
                                <div class="row">
                                
                                    <!-- Album Cover -->
                                    <div class="col-md-3 col-lg-2 mb-3">
                                        
                                        <!-- Album Cover Image -->
                                        <div class="album-cover-wrapper">
                                            <img src="@song.CoverImageUrl"
                                                 alt="@song.Album cover"
                                                 class="album-cover-img"
                                                 onerror="this.onerror=null; this.src='https://picsum.photos/id/870/200/300';"/>
                                            <div class="album-overlay">
                                                <div class="album-title-overlay">@song.Album</div>
                                                <div class="album-artist-overlay">@song.Artist</div>
                                            </div>
                                        </div>
                                        <div class="text-center mt-2">
                                            <small class="text-muted">@song.Label, @song.Year</small>
                                        </div>
                                    </div>
                                    
                                    <!-- Song Info & Player -->
                                    <div class="col-md-6 col-lg-7">
                                        <h4 class="mb-1">@song.Title</h4>
                                        <p class="text-muted mb-3">@Localazier["from"] @song.Album @Localazier["by"] @song.Artist</p>
                                        <audio controls id="audio-@song.Id">
                                            <source src="" type="audio/wav" id="audioSource-@song.Id">
                                        </audio>
                                    </div>
                                    
                                    <!-- Stats -->
                                    <div class="col-md-3">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h6 class="card-subtitle mb-2 text-muted">@Localazier["track_info"]</h6>
                                                <ul class="list-unstyled mb-0">
                                                    <li class="mb-2">
                                                        <i class="bi bi-clock me-2"></i>
                                                        @SongHelpers.FormatDuration(song.DurationSeconds)
                                                    </li>
                                                    <li class="mb-2">
                                                        <i class="bi bi-disc me-2"></i>
                                                        @song.Genre
                                                    </li>
                                                    <li class="mb-2">
                                                        <i class="bi bi-calendar me-2"></i>
                                                        @song.Year
                                                    </li>
                                                    <li>
                                                        <i class="bi bi-building me-2"></i>
                                                        @song.Label
                                                    </li>
                                                    <li>
                                                        <i class="bi bi-heart text-muted fs-6"></i>
                                                        @song.Likes
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" href="#" onclick="goToPage(@(Model.CurrentPage - 1))">
               «
            </a>
        </li>
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="goToPage(@(Model.CurrentPage - 1))">
                    @(Model.CurrentPage - 1)
                </a>
            </li>
        }
        <li class="page-item active">
            <a class="page-link" href="#">@Model.CurrentPage</a>
        </li>
        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="goToPage(@(Model.CurrentPage + 1))">
                    @(Model.CurrentPage + 1)
                </a>
            </li>
        }
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" href="#" onclick="goToPage(@(Model.CurrentPage + 1))">
               »
            </a>
        </li>
    </ul>
</nav>

<script>
    document.querySelectorAll('.song-row').forEach(row => {
        row.addEventListener('click', function(e) {
            if (this.getAttribute('aria-expanded') === 'true') loadAudioForRow(row);
            this.classList.toggle('active-expand');
        });
    });
    
    function loadAudioForRow(row){
        const player = document.getElementById(`audio-${row.id}`);
        const source = document.getElementById(`audioSource-${row.id}`);
        source.src = `/music/stream/${row.getAttribute('song-seed')}/${row.getAttribute('song-duration')}`;
        player.load();
    }
    
    function goToPage(page) {
        const params = new URLSearchParams(window.location.search);
        params.set('page', page);
        window.location.href = '@Url.Action("Index")?' + params.toString();
    }
    
    
</script>